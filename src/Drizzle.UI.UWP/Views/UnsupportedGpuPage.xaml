<Page
    x:Class="Drizzle.UI.UWP.Views.UnsupportedGpuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Drizzle.UI.UWP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:visuals="using:Drizzle.UI.UWP.AnimatedIcons"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="4">
            <TextBlock
                x:Uid="TitleWarning"
                FontSize="16"
                FontWeight="Bold" />
            <TextBlock x:Uid="DescPerformanceNotify" TextWrapping="WrapWholeWords" />
        </StackPanel>
        <muxc:AnimatedVisualPlayer
            Height="600"
            Margin="50,-390,-250,-250"
            Opacity="0.1"
            PlaybackRate="0.5"
            RenderTransformOrigin="0.5,0.5">
            <visuals:Tweak />
            <muxc:AnimatedVisualPlayer.RenderTransform>
                <CompositeTransform Rotation="-126.648" />
            </muxc:AnimatedVisualPlayer.RenderTransform>
        </muxc:AnimatedVisualPlayer>
    </Grid>
</Page>
