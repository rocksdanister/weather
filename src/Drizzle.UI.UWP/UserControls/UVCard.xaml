<UserControl
    x:Class="Drizzle.UI.UWP.UserControls.UVCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:customConverters="using:Drizzle.UI.UWP.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Drizzle.UI.UWP.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:visuals="using:Drizzle.UI.UWP.AnimatedVisuals"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Loaded="UserControl_Loaded"
    SizeChanged="UserControl_SizeChanged"
    mc:Ignorable="d">

    <UserControl.Resources>
        <customConverters:NullVisibilityConverter x:Key="NullVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="10,5,0,0"
            Opacity="0.4"
            Orientation="Horizontal"
            Spacing="4">
            <FontIcon
                FontFamily="{StaticResource CustomIconFonts}"
                FontSize="16"
                Glyph="&#xE904;" />
            <TextBlock x:Uid="TitleUVIndex" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Spacing="0"
            Visibility="{x:Bind Value, Mode=OneWay, Converter={StaticResource NullVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    FontSize="40"
                    FontWeight="SemiBold"
                    Text="{x:Bind Value, Mode=OneWay}" />
            </StackPanel>
            <TextBlock
                FontSize="14"
                Opacity="0.4"
                Text="{x:Bind Message, Mode=OneWay}" />
        </StackPanel>

        <Canvas
            x:Name="canvas"
            Grid.Row="2"
            Margin="0,25,0,0"
            Visibility="{x:Bind Value, Mode=OneWay, Converter={StaticResource NullVisibilityConverter}}">
            <Rectangle
                x:Name="sliderLine"
                Canvas.Left="0"
                Canvas.Top="2.5"
                Width="350"
                Height="5"
                RadiusX="2.5"
                RadiusY="2.5">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0.0" Color="#00e400" />
                        <GradientStop Offset="0.2" Color="#ffff00" />
                        <GradientStop Offset="0.4" Color="#ff7e00 " />
                        <GradientStop Offset="0.6" Color="#ff0000 " />
                        <GradientStop Offset="0.8" Color="#8f3f97" />
                        <GradientStop Offset="1.0" Color="#7e0023 " />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Ellipse
                x:Name="sliderKnob"
                Canvas.Left="0"
                Canvas.Top="0"
                Width="10"
                Height="10"
                Fill="White"
                Visibility="{x:Bind Value, Mode=OneWay, Converter={StaticResource NullVisibilityConverter}}" />
        </Canvas>

        <muxc:AnimatedVisualPlayer
            Grid.RowSpan="3"
            Width="125"
            Height="125"
            Margin="0,25,0,0"
            Opacity="0.35"
            PlaybackRate="0.5"
            Visibility="{x:Bind Value, Mode=OneWay, Converter={StaticResource NullVisibilityConverter}, ConverterParameter=Reverse}">
            <animations:Implicit.ShowAnimations>
                <animations:OpacityAnimation
                    From="0"
                    To="0.65"
                    Duration="0:0:1" />
            </animations:Implicit.ShowAnimations>
            <visuals:Missing />
        </muxc:AnimatedVisualPlayer>
    </Grid>
</UserControl>
